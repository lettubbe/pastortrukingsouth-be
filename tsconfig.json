{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "typeRoots": [
      "@types",
      "./node_modules/@types"
    ]
  },
  "include": [
    "src/**/*.ts",
    "**/*.js",
    "@types/**/*.d.ts"
  ]
}